/* pages/post/post.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
  height: 100vh;
}

.textarea {
  width: 100%;
  max-width: 600px;
  height: 100px;
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 8px;
  resize: none;
  font-size: 16px;
  color: #333;
  background-color: #fff;
}

.image-uploader {
  width: 100%;
  max-width: 600px;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20px;
}

.image-preview {
  position: relative;
  width: 100px;
  height: 100px;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 8px;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-icon {
  position: absolute;
  top: 5px;
  right: 5px;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  padding: 2px;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100px;
  height: 100px;
  border: 2px dashed #ccc;
  border-radius: 8px;
  cursor: pointer;
  transition: border-color 0.3s;
}

.upload-btn:hover {
  border-color: #999;
}

.upload-btn icon {
  margin-right: 5px;
}

.upload-btn text {
  font-size: 14px;
  color: #666;
}

.submit-btn {
  width: 100%;
  max-width: 600px;
  padding: 15px;
  border: none;
  border-radius: 8px;
  background-color: #007aff;
  color: #fff;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.submit-btn:active {
  background-color: #005fa3;
}

.submit-btn[loading] {
  background-color: #ccc;
}